<?xml version="1.0" encoding="utf-8"?>
<ScrollView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <RelativeLayout android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/first"
                    android:background=	"#000000"
                    android:layout_width="match_parent" android:layout_height="278dp">
        <ImageView

                android:layout_width="match_parent"
                android:layout_height="432dp" tools:srcCompat="@tools:sample/avatars"
                tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="-2dp" android:id="@+id/imageView"/>
        <TextView
                android:elevation="5dp"
                android:textSize="40sp"
                android:color ="#FFFFFF"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:id="@+id/textView" android:textAllCaps="false" android:textColorHint="#00A78888"/>
    </RelativeLayout>
    <LinearLayout
            android:background="@color/colorPrimary" android:layout_below="@id/first"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:orientation="vertical">
        <Button
                android:background="#EF9B0F"
                android:text="@string/Profile"
                android:layout_width="309dp"
                android:layout_height="51dp"
                android:layout_gravity="center"

                android:id="@+id/Profile"
                android:layout_marginBottom="50dp"
        />
        <Button
                android:text="@string/About"
                android:background="#EF9B0F"
                android:layout_width="309dp"
                android:layout_gravity="center"
                android:layout_height="51dp"
                android:id="@+id/About"
        />

    </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</ScrollView>