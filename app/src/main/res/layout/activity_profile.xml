<?xml version="1.0" encoding="utf-8"?>
 <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#A9A9A9"
        android:layout_height="match_parent"
        tools:context=".Profile">


   <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">

        <ImageView
            android:layout_width="271dp"
            android:layout_height="212dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/mypic"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:contentDescription="TODO" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.195"/>
    <TextView
            android:layout_below="@id/mypic"
            android:text="@string/name"
            android:layout_width="283dp"
            android:layout_centerInParent="true"
            android:layout_height="41dp"
            android:id="@+id/name" android:textSize="36sp"
            android:textAlignment="center"
/>

       <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                          android:layout_height="match_parent"
                                          android:layout_below="@id/name"
                                          android:layout_marginRight="5dp"
                                          android:layout_marginLeft="5dp"
                                          android:elevation="8dp"
       >
           <LinearLayout

                   android:orientation="vertical"
                   android:layout_width="match_parent"

                   android:layout_height="match_parent"
                   android:background="@color/colorPrimary"


                   android:id="@+id/linearLayout">


               <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent" android:layout_height="wrap_content">

                   <TextView
                           android:layout_weight="1"
                           android:text="Track:"
                           android:layout_width="wrap_content"
                           android:layout_height="41dp" tools:layout_editor_absoluteY="340dp"
                           tools:layout_editor_absoluteX="64dp" android:textSize="20sp"
                           android:typeface="monospace"/>
                   <TextView
                           android:text="Android"
                           android:layout_weight="0.9"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent" tools:layout_editor_absoluteY="340dp"
                           tools:layout_editor_absoluteX="64dp" android:id="@+id/track" android:textSize="20sp"
                           android:typeface="monospace"/>

               </LinearLayout>
               <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent" android:layout_height="wrap_content">
                   <TextView
                           android:text="Country:"
                           android:layout_width="match_parent"
                           android:layout_height="41dp" tools:layout_editor_absoluteY="340dp"
                           tools:layout_editor_absoluteX="64dp" android:textSize="20sp"
                           android:typeface="monospace" android:layout_weight="1"/>

                   <TextView
                           android:text="South Africa"
                           android:layout_width="match_parent"
                           android:layout_height="41dp" tools:layout_editor_absoluteY="340dp"
                           tools:layout_editor_absoluteX="64dp" android:id="@+id/country" android:textSize="20sp"
                           android:typeface="monospace" android:layout_weight="1"/>

               </LinearLayout>
               <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent" android:layout_height="wrap_content">
                   <TextView
                           android:text="E-mail:"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" tools:layout_editor_absoluteY="340dp"
                           android:textSize="20sp"
                           android:typeface="monospace" android:layout_weight="1"/>

                   <TextView
                           android:text="s212317165@gmail.com"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/email" android:textSize="18sp"
                           android:typeface="monospace" android:layout_weight="0.7"/>

               </LinearLayout>
               <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent" android:layout_height="wrap_content">
                   <TextView
                           android:text="Phone :"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" tools:layout_editor_absoluteY="340dp"
                           tools:layout_editor_absoluteX="64dp" android:textSize="20sp"
                           android:typeface="monospace" android:layout_weight="1"/>

                   <TextView
                           android:text="0710938924"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" tools:layout_editor_absoluteY="340dp"
                           tools:layout_editor_absoluteX="64dp" android:id="@+id/phone" android:textSize="20sp"
                           android:typeface="monospace" android:layout_weight="1.1"/>

               </LinearLayout>
               <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent" android:layout_height="wrap_content">
                   <TextView
                           android:text="Slack Username:"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent" tools:layout_editor_absoluteY="340dp"
                           tools:layout_editor_absoluteX="64dp" android:textSize="18sp"
                           android:typeface="monospace" android:layout_weight="1"/>


                   <TextView
                           android:text="@Dumisanitom"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" tools:layout_editor_absoluteY="340dp"
                           tools:layout_editor_absoluteX="64dp" android:id="@+id/slack" android:textSize="20sp"
                           android:typeface="monospace" android:layout_weight="1"/>


               </LinearLayout>

           </LinearLayout>

       </androidx.cardview.widget.CardView>
</RelativeLayout>
</ScrollView>